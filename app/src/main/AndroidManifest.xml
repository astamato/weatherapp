<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.challenge.weatherapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/weather_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="WeatherAppMainActivity"
            android:label="@string/title_activity_weather_app_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="NewCityChooserActivity"
            android:label="@string/title_activity_weather_app_main"
            android:screenOrientation="portrait" />
        <activity
            android:name="CityDailyWeatherForecastActivity"
            android:label="@string/title_activity_weather_app_main"
            android:screenOrientation="portrait" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
